<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
       >
        <ImageView
            android:layout_width="300dp"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:src="@drawable/coldplay1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/image1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:background="@drawable/logorectangle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/coldplay1"
            android:id="@+id/image2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/White_FloralWhite"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Blue_LightSteelBlue">
        <TableLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tablelayout2"

            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="120dp">

            <TableRow>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/people1"
                    android:id="@+id/peopleimage"
                    />
                <TextView
                    android:text="50 people going"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:id="@+id/peoplegoing"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:background="@color/Thistle"
        android:weightSum="1">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tablelayout"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">

        <TableRow>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calender1"
                android:textStyle="bold"
                android:id="@+id/timeimage"
                />
            <TextView
                android:text="Date and time"
                android:id="@+id/datetime"/>
        </TableRow>
        </TableLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow2"
            android:layout_marginStart="15dp"
        />
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">

            <TableRow>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calender1"
                    android:textStyle="bold"
                    android:id="@+id/endtimeimage"
                    />
                <TextView
                    android:text="Date and time"
                    android:id="@+id/enddatetime"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Event Name: "
        android:textStyle="bold"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="fill_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa "

            android:id="@+id/desans"/>
    </LinearLayout>
    <FrameLayout
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/youtubecontainer"
        android:layout_width="wrap_content" android:layout_height="200dp"
        android:layout_gravity="center"
        android:tag="unique_tag"

        tools:context=".MainActivity" tools:ignore="MergeRootFrame"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Blue_LightSteelBlue">
        <TableLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tablelayout3"

            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">

            <TableRow>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/location2"
                    android:id="@+id/locationimage"
                    />
                <TextView
                    android:text="50 people going"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:id="@+id/locationans"/>
            </TableRow>
        </TableLayout>
        <TableLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tablelayout4"

            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp">

            <TableRow>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/caricon"
                    android:id="@+id/carimage"
                    />
                <TextView
                    android:text="50 miles away"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:id="@+id/distanceans"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/googlemapfragment"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:name="com.google.android.gms.maps.MapFragment"
        tools:context="com.mylab5application.MasterDataFlowActivity" tools:ignore="MergeRootFrame"
        ></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/Thistle"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:id="@+id/hostname"
            android:textStyle="bold"
            android:textColor="@color/Gray_DimGray"
            android:text="by Sahithi"
            />
        <TableLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tablelayout5"

            android:layout_below="@+id/linearLayout2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp">

            <TableRow>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/phoneicon"
                    android:id="@+id/phoneimage"
                    />
                <TextView
                    android:text="6504458606"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="20dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:id="@+id/phonenumber"/>
            </TableRow>
            <TableRow>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/email"
                    android:id="@+id/emailimage"
                    />
                <TextView
                    android:text="sahi.desu25@gmail.com"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="20dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:id="@+id/email"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/Thistle"/>

    </LinearLayout>

















</LinearLayout>
    </ScrollView>