<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <ImageView
            android:id="@+id/GridImage"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/coldplay1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="20dp"
            android:id="@+id/name"
            android:textColor="@color/Blue_DodgerBlue"

            android:background="@color/Black_transparent_black_hex_5"
            android:layout_alignTop="@+id/GridImage" />



        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GridRatings"
            android:layout_gravity="center"
            android:numStars="5"
            android:stepSize="0.4"
            android:rating="2.5"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/GridImage"
            android:layout_centerHorizontal="true"
            style="?android:attr/ratingBarStyleSmall"
            />



    </RelativeLayout>




</LinearLayout>