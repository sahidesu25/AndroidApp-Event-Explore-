
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >



    <VideoView
        android:id="@+id/video_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/eventbag2"
        />




    <LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_marginTop="120dp"
    android:padding="10dp"
        android:gravity="center"
        android:background="@color/Black_transparent_black_hex_9"
    android:orientation="vertical"
    android:layout_height="match_parent">



        <TextView
        android:text="Username"

        android:textSize="20dp"
        android:textColor="@color/White_transparent_white_hex_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:background="@color/Black_transparent_black_hex_10"
        android:textColor="@color/White_transparent_white_hex_10"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Password"

        android:textSize="20dp"
        android:textColor="@color/White_transparent_white_hex_15"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:background="@color/Black_transparent_black_hex_10"
        android:textColor="@color/White_transparent_white_hex_10"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="235dp"

        android:textSize="20dp"
        android:layout_marginBottom="10dp"
      android:background="@color/Blue_DarkSlateBlue"
        android:layout_height="wrap_content"
        android:textColor="@color/White_transparent_white_hex_15"
        android:text="Login" />

    <TextView
        android:id="@+id/tvRegisterLink"
           android:textColor="@color/White_transparent_white_hex_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:textSize="20dp"

        android:text="Register Here"
       />

</LinearLayout>

</RelativeLayout>